{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[Debug] Compile current asm file",
            "type": "shell",
            "command": "bin/debug/lc3_vm",
            "args": [
                "-c",
                "${relativeFile}"
            ],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "[Debug] Run current asm file",
            "type": "shell",
            "command": "bin/debug/lc3_vm",
            "args": [
                "-r",
                "${relativeFile}"
            ],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        }
    ],
}
